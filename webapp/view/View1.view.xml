<mvc:View
    controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
						<customHeader>
			<Toolbar>
				<Button id="bBack" type="Back" press="onPress" />
				<ToolbarSpacer/>
				<Title text="Title" level="H2"/>
				<ToolbarSpacer/>
				<Button id="bEdit" icon="sap-icon://edit" type="Transparent" press="onPress" ariaLabelledBy="editButtonLabel"/>
			</Toolbar>

		</customHeader>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
